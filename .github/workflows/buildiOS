name: Build Flutter iOS App

on:
  push:
    branches:
      - main  # Trigger on push to the main branch
  pull_request:
    branches:
      - main  # Trigger on pull requests as well

jobs:
  build_ios:
    runs-on: macos-latest  # iOS builds require macOS

    steps:
      # Checkout the latest code
      - uses: actions/checkout@v4

      # Set up Flutter with master channel
      - uses: subosito/flutter-action@v2
        with:
          flutter-version: 'master'  # Use Flutter master channel as preferred
          channel: 'master'          # Set the channel to master

      # Install Flutter dependencies
      - run: flutter pub get

      # Set up CocoaPods dependencies
      - name: Install CocoaPods dependencies
        run: |
          cd ios
          pod install
          
      # Build iOS app
      - run: flutter build ios --release

      # Upload iOS artifact to GitHub (optional)
      - name: Upload IPA
        uses: actions/upload-artifact@v3
        with:
          name: ios-ipa
          path: build/ios/ipa/*.ipa  # Assuming you generate an IPA file
